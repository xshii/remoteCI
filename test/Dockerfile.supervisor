FROM python:3.8-slim

# 设置工作目录
WORKDIR /app

# 安装系统依赖（包括 supervisor）
RUN apt-get update && apt-get install -y \
    git \
    rsync \
    openssh-client \
    curl \
    redis-server \
    supervisor \
    && rm -rf /var/lib/apt/lists/*

# 配置 pip 清华源
RUN pip config set global.index-url https://pypi.tuna.tsinghua.edu.cn/simple

# 复制依赖文件
COPY requirements.txt .

# 安装 Python 依赖（使用清华源）
RUN pip install --no-cache-dir -r requirements.txt

# 复制应用代码
COPY server/ ./server/
COPY client/ ./client/

# 创建必要的目录
RUN mkdir -p /app/data/logs /app/data/uploads /var/ci-workspace /tmp/remote-ci /var/log/remote-ci

# 创建 supervisor 配置
RUN mkdir -p /etc/supervisor/conf.d

# 创建 supervisor 配置文件
COPY test/supervisor-docker.conf /etc/supervisor/conf.d/remote-ci.conf

# 设置环境变量
ENV PYTHONUNBUFFERED=1 \
    CI_DATA_DIR=/app/data \
    CI_WORK_DIR=/tmp/remote-ci \
    CI_WORKSPACE_DIR=/var/ci-workspace

# 暴露端口
EXPOSE 5000 5555

# 使用 supervisor 启动所有服务
CMD ["/usr/bin/supervisord", "-n", "-c", "/etc/supervisor/supervisord.conf"]
